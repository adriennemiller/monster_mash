<div class= "container">
<div class="d-flex justify-content-center">
  <h1> Edit User </h1>
</div>

<div class="d-flex justify-content-center">
<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
      <div class="form-group">
        <%= f.label :name, "Username:", class: "col-md-4 control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.submit "Submit", class: "btn btn-default btn-outline-primary" %>
 <% end %>
 </div>
     <div class="mx-auto">
     <%= form_tag @user, method: "delete", class: "col-md-2 col-md-offset-5" do %>
     <%= link_to 'Delete User', @user, method: :delete %>
     <% end %>
    </div>
  </div>
</div>
